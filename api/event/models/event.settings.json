{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "name": "event"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime",
      "required": true
    },
    "repeatsEveryDays": {
      "type": "integer",
      "max": 100,
      "min": 0
    },
    "location": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "eventImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "ministries": {
      "collection": "ministries",
      "via": "events",
      "dominant": true
    },
    "metadata": {
      "type": "component",
      "repeatable": false,
      "component": "meta.metadata"
    }
  }
}
